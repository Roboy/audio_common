        <param name="topic" value="mic3"/>
  </node>
  <node name="mic4" pkg="audio_capture" type="audio_capture" output="screen">
        <param name="bitrate" value="128"/>
        <param name="device" value="mic_channel4"/>
        <param name="channels" value="1"/>
