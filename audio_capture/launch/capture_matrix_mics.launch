      <param name="topic" value="mic2"/>
  </node>
  <node name="mic3" pkg="audio_capture" type="audio_capture" output="screen">
        <param name="bitrate" value="128"/>
        <param name="device" value="mic_channel3"/>
        <param name="channels" value="1"/>
